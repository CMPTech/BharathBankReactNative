<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_id"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/edittext_id"
        android:layout_marginTop="20dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:text="@string/send_token"
        android:textColor="#f5f1e4"
        android:background="#465d82"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edittext_id"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:hint="@string/enter_your_phone_number"
        android:textColorHint="#080808"
        android:textColor="#080808"
        app:prefixText="+91 "
        android:gravity="center"
        android:background="#e8e7e3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text1"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </com.google.android.material.textfield.TextInputLayout>

</RelativeLayout>
